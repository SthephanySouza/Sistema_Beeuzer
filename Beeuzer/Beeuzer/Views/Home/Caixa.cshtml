@{
    ViewBag.Title = "Caixas";
}
<main>
    <section id="caixas_link">
        <div class="caixas">
            <a href="@Url.Action("Caixa_Camisa", "Produto")">
                <div class="caixa_camisas">
                    <h1>Caixa de Camisas</h1>
                    <img class="img_camisa" src="~/img/Camisas.jpeg">
                </div>
            </a>

