@model Beeuzer.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="text-muted">
            <h2>Login</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.UrlRetorno)

                    <center>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </center>

                    <center>
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </center>

                    <center>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Entrar" class="btn btn-default" id="teste2" />
                            </div>
                        </div>
                    </center>
                </div>
            }

            <br />
            <div id="cad">
                @Html.ActionLink("Não possui cadastro? Faça cadastro", "Cadastro", "Autenticacao")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(360deg, #000000 5%, #34029d 95%);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }

    .modal-content {
        text-align: center;
        align-items: center;
        color: aliceblue;
    }

    h2 {
        color: white;
    }

    .form-group {
        color: white;
    }

    #teste2 {
        color: white;
        width: 215px;
        height: 52px;
        flex-shrink: 0;
        border-radius: 25px;
        background: linear-gradient(0deg, #BF5FFA 0%, #BF5FFA 100%);
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }

    #cad {
        width: 300px;
        height: 30px;
        flex-shrink: 0;
        border-radius: 10px;
        border: 1px solid #D539EE;
        color: rgba(255, 255, 255, 0.00);
        box-shadow: 0px 6px 4px 0px rgba(0, 0, 0, 0.25);
    }
</style>