﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/img/logo2.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            <img src="~/img/logo.png" />
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Caixas", "Caixa", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Carrinho", "Carrinho", "Carrinho", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <ul class="navbar-nav navbar-right" id="teste">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><img class="icon_user" src="~/img/icon_user.png" /></li>
                        <li>@Html.ActionLink(@User.Identity.Name, " ", " ", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Sair", "Logout", "Autenticacao", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        @Html.ActionLink("Entrar", "Login", "Autenticacao", new { area = "" }, new { @class = "nav-link" })
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" id="rodape">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>

    .navbar-nav li a {
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .navbar-nav a:hover {
        background-color: #29282800;
        color: #F6BE2C;
    }

    img {
        width: 110px;
        height: 110px;
    }

    #teste {
        color: white;
        -moz-border-radius: 15px;
        -webkit-border-radius: 15px;
        border-radius: 10px;
        border: 1px solid #F6BE2C;
    }

    .nav-link {
        color: white;
    }

    #rodape {
        color: white
    }
</style>